
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="PesquisaNome">
            <fieldset>
                <legend>Pesquisa por nome</legend>
                <div class="form-group">
                    <label for="nome" class="col-lg-2 control-label">Nome</label>
                    <div class="col-lg-10">
                        <input type="search" name="nome" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="navbar-btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

</div>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="PesquisaData">
            <fieldset>
                <legend>Pesquisa por data</legend>
                <div class="form-group">
                    <label for="data" class="col-lg-2 control-label">Data de aniversario</label>
                    <div class="col-lg-10">
                        <input type="date" name="data" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="navbar-btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>